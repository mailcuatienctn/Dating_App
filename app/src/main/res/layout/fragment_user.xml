<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    tools:context=".UserFragment">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar_profile"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@android:color/white"
        android:elevation="4dp"
        app:contentInsetStart="0dp"
        app:contentInsetEnd="0dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <!-- ⭐ Icon tạm dừng ghép đôi mới thêm ⭐ -->
            <ImageView
                android:id="@+id/icon_pause_matching"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_centerVertical="true"
                android:layout_toStartOf="@id/icon_change_password"
                android:padding="12dp"
                android:src="@drawable/ic_pause_matching"
                android:contentDescription="Tạm dừng ghép đôi"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:clickable="true"
                android:focusable="true" />

            <!-- Icon đổi mật khẩu mới thêm -->
            <ImageView
                android:id="@+id/icon_change_password"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_toStartOf="@id/icon_logout"
                android:layout_centerVertical="true"
                android:padding="12dp"
                android:src="@drawable/ic_change_password"
                android:contentDescription="Đổi mật khẩu"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:clickable="true"
                android:focusable="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hồ sơ"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@android:color/black"
                android:layout_centerInParent="true"/>

            <ImageView
                android:id="@+id/icon_logout"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:padding="12dp"
                android:src="@drawable/ic_logout"
                android:contentDescription="Đăng xuất"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:clickable="true"
                android:focusable="true" />

        </RelativeLayout>
    </androidx.appcompat.widget.Toolbar>

    <androidx.core.widget.NestedScrollView
        android:id="@+id/scroll_profile"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/toolbar_profile"> <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:paddingBottom="24dp">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/image_avatar"
            android:layout_width="match_parent"
            android:layout_height="400dp"
            android:layout_marginBottom="16dp"
            android:scaleType="centerCrop"
            app:strokeWidth="2dp"
            android:contentDescription="Ảnh đại diện" />

        <TextView
            android:id="@+id/text_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Trần Vịnh Tiến"
            android:textSize="26sp"
            android:textColor="@android:color/black"
            android:textStyle="bold"
            android:maxLines="1"
            android:ellipsize="end" />

        <TextView
            android:id="@+id/text_height"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="160 cm"
            android:textSize="18sp"
            android:textColor="#666666" android:layout_marginTop="4dp"
            android:layout_marginBottom="12dp"
            android:drawableStart="@drawable/ic_height"
            android:drawablePadding="8dp"
            android:layout_gravity="start"
            android:paddingTop="15dp"
            android:layout_marginStart="16dp" />

        <TextView
            android:id="@+id/text_age_gender"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Nam, 22 tuổi"
            android:textSize="18sp"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="12dp"
            android:drawableStart="@drawable/male"
            android:drawablePadding="8dp"
            android:layout_gravity="start"
            android:paddingTop="15dp"
            android:layout_marginStart="16dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="24dp"
            android:gravity="center_vertical">
            <TextView
                android:layout_width="wrap_content" android:layout_height="wrap_content"
                android:text="Đang ở"
                android:textSize="16sp"
                android:textColor="#666666"
                android:drawablePadding="8dp"
                android:drawableStart="@drawable/ic_location"
                android:layout_marginEnd="8dp" />
            <TextView
                android:id="@+id/text_location"
                android:layout_width="0dp" android:layout_height="wrap_content"
                android:layout_weight="1"
                tools:text="Đà Nẵng, Việt Nam"
                android:textSize="16sp"
                android:textColor="#666666"
                android:ellipsize="end"
                android:maxLines="1" />
        </LinearLayout>

        <TextView
            android:id="@+id/text_bio"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="Xin chào! Tôi là sinh viên IT, thích công nghệ và tìm kiếm người đặc biệt! Tôi thích chơi game, đọc sách và khám phá những điều mới mẻ trong cuộc sống."
            android:textSize="16sp"
            android:textColor="#444444"
            android:lineSpacingExtra="4dp"
            android:layout_marginStart="16dp"
            android:layout_marginBottom="24dp"
            android:drawableStart="@drawable/ic_introduce"
            android:layout_marginEnd="8dp"
            />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#EEEEEE"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="24dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Sở thích"
            android:textSize="20sp"
            android:textColor="@android:color/black"
            android:textStyle="bold"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="8dp" />

        <TextView
            android:id="@+id/text_hobbies"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="Chơi game, đọc sách, du lịch, nấu ăn, tập gym, nghe nhạc, xem phim"
            android:textSize="16sp"
            android:textColor="#444444"
            android:lineSpacingExtra="4dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="24dp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#EEEEEE"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="24dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Thư viện ảnh"
            android:textSize="20sp"
            android:textColor="@android:color/black"
            android:textStyle="bold"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="8dp" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycler_photos"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:nestedScrollingEnabled="false"
            android:paddingHorizontal="16dp"
            android:clipToPadding="false"
            android:layout_marginBottom="32dp" />

        <Button
            android:id="@+id/btn_edit_profile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Chỉnh sửa hồ sơ"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:backgroundTint="#FF8080"
            android:paddingVertical="12dp"
            app:cornerRadius="8dp" />
    </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</RelativeLayout>